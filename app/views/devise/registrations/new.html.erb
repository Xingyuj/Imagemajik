<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class:"form-control", style:"width:30%" %></div>

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class:"form-control", style:"width:30%"%></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class:"form-control", style:"width:30%"%></div>
<br/>
  <%= f.submit "Sign up", class: "btn btn-primary"%>
    <%= render "devise/shared/links" %>
<% end %>


